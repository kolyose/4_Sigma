{
  "name": "4_Sigma",
  "version": "1.0.0",
  "description": "Test project utilizing Pixi.js game engine, Node.js for server and React.js for admin panel.",
  "main": "index.js",
  "repository": "https://github.com/kolyose/4_Sigma",
  "author": "Sergey Kolesnik <kolesnik.s.e@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=production && node build.js",
    "dev": "node build.js"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "airbnb",
      "prettier"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "no-underscore-dangle": "off",
      "linebreak-style": "off"
    }
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current",
            "browsers": "last 2 versions"
          }
        }
      ],
      [
        "react"
      ]
    ]
  },
  "devDependencies": {
    "babel-register": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-config-prettier": "^1.6.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3"
  },
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^6.4.1",
    "babel-preset-env": "^1.3.3",
    "babel-preset-react": "^6.24.1",
    "cross-env": "^4.0.0",
    "koa": "^2.2.0",
    "koa-compose": "^4.0.0",
    "koa-multer": "^1.0.1",
    "koa-route": "^3.2.0",
    "koa-static": "^3.0.0",
    "mz": "^2.6.0",
    "react": "^15.5.3",
    "react-dom": "^15.5.3",
    "rimraf": "^2.6.1",
    "webpack": "^2.3.3"
  }
}
